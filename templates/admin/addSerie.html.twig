{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <style>
        #form
        {
            margin-left: auto;
            margin-right: auto;
            margin-top: 20px;
            width: 65%;
        }
    </style>
    <div id='form'>
        {{ form_start(form) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.resume) }}
        {{ form_row(form.duree) }}
        {{ form_row(form.premiereDiffusion) }}
        {{ form_row(form.image) }}
        <span class="text-danger" id="erreur"></span>
        {{ form_row(form.genres) }}
        <button type="submit" value='sauvegarder' class="btn btn-primary">Ajouter</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{asset('js/validForm.js')}}"></script>
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/js/tom-select.complete.min.js"></script>
    <script src="{{asset('js/select.js')}}"></script>
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<link href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.css" rel="stylesheet">
{% endblock %}